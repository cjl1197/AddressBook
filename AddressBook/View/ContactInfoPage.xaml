<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="AddressBook.View.ContactInfoPage"
             Title="">
     <Shell.Titleview
        Shell.TitleviewIsVisible="false" />
        

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
    </ContentPage.Behaviors>
    
    <StackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center">
                    <Label 
                        Text="{Binding full_name}"
                        FontSize="20"
                        Margin="40, 5, 0, 0"/>
                    <Label 
                        Text="{Binding email}"
                        FontSize="20"
                        Margin="40, 5, 0, 0"/>
                    <Label 
                        Text="{Binding phone_number}"
                        FontSize="20"
                        Margin="40, 5, 0, 0"/>
                    <Label 
                        Text="{Binding full_address}"
                        FontSize="20"
                        Margin="40, 5, 0, 0"/>
                </StackLayout>
</ContentPage>
